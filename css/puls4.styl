azul = #22bce0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #dd4f24

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?tsd0rk');
	src:url('../fonts/icomoon.eot?#iefixtsd0rk') format('embedded-opentype'),
		url('../fonts/icomoon.woff?tsd0rk') format('woff'),
		url('../fonts/icomoon.ttf?tsd0rk') format('truetype'),
		url('../fonts/icomoon.svg?tsd0rk#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white,0.5)
	text-align center
	padding 1em 0
	width 100%
	
	h3
		font-size 14px
		font-weigth normal
		
		strong 
			display block
			
		.mejor
			&:before
			&:after
				content " - "
		
header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative 
	z-index 2
	
	.logo
		border-right 1px solid azul
		width 60px
		float left
		
		img 
			width 52px
	
	.titular
		margin 0 60px 0 70px
		
		.filtro
			color azul
			font-size 14px
			font-weight bold
			font-style italic
			text-decoration none
			
		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			
			&:before
				display inline-block
				content "\e908"
				font-family "iconitos"
				margin 0 3px 0 0
				text-shadow none
			
		.titulo
			font-size 18px
			font-weigth normal
			margin 0
			padding 0
			
	.usuario
		position absolute
		top 10px
		right 10px
		
		.avatar
			margin 0 1.2em 0 0
			position relative
			z-index 69
			
			img 
				width 50px
				border-radius 50%
				
		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			top 15px
			text-align right
			text-decoration none
			width 50%
			z-index 0
			
			&:after
				display inline-block
				content "\e600"
				font-family "iconitos"
				text-shadow 1px 1px 0px black
				
			
nav 
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		
		&::-webkit-scrollbar
			display none
		
		li
			display inline-block
			
			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				
				&:hover
					background rgba(black,0.1)

.posts
	padding 0.5em
	
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 0.5em
		
	.acciones
		border-top 3px solid azul
		padding 0.5em
		overflow hidden
		
		.datos
			float right
			position relative
			
			.comentarios
				background gris_oscuro
				border-radius 3px
				color white
				margin 0 1em 0 0
				padding 2px 5px
				text-decoration none
				
				&:after
					border-bottom 5px solid transparent
					border-left 6px solid transparent
					border-top 6px solid gris_oscuro
					border-right 6px solid transparent
					content ""
					left 12px
					position absolute
					top 20px
			
			.estrellita
				text-decoration none
				
				&:after
					font-family "iconitos"
					font-size 1.1em
					color #E0D561
					content: "\e9d9"
					

		.votos
			float left
			
			.down
			.up
				text-decoration none
				&:before
					font-family "iconitos"
					font-size 1.5em
					vertical-align middle
			
			.down
				color red
				&:before
					content: "\e600"
			
			.up 
				color green
				&:before
					content: "\e601"				
			
	.descripcion
		color gris_texto
		
		.detalles
			height 160px
			margin-left 130px
			
			.autor
				margin 0.5em 0 2em 0
				
			.fecha
				float right
				margin 0 1em 0 0
				
			.tag
				background azul
				border-radius 0.5em
				color white
				padding 0.2em 0.5em
				text-decoration none
			
			.titulo
				color gris_oscuro
				font-size 18px
				font-style italic
				margin 0
				padding 0.5em 0.5em 0 0
			
		.imagen
			float left
			
			img 
				height 160px
				vertical-align top
				width 120px
		
	
@media screen and (min-width: 768px)

	header
		.titular
			.publicar
				font-size 1.1em
				padding-left 3em
				position relative

				&:before
					left 0
					font-size 2.5em
					position absolute
					top -10px

	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%

			